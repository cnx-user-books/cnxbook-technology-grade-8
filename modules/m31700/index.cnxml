    <para id="id6279331"/>
    <para id="id8227593">Situation 2</para>
    <para id="id3956723"/>
    <figure id="id5668837">
      <media id="id5668837_media" alt="">
        <image mime-type="image/png" src="../../media/graphics9.png" id="id5668837__onlineimage" height="205" width="346"/>
